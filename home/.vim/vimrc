         \ "db/seeds/*.seeds.rb": {"command": "seed"},
         \ "spec/views/*_spec.rb": {
         \   "command": "viewspec",
         \   "alternate": "app/views/%s",
         \   "template":
         \     ["require 'spec_helper'", "describe \"%s\" do", "end"],
         \ }
         \}
map <leader>sf :Eintegrationtest 
map <leader>sv :Eviewspec 
map <leader>sc :Efunctionaltest 
map <leader>sm :Eunittest 

